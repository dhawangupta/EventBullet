<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffde"
    tools:context=".MapsActivity">

    <fragment android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/map"
        tools:context="com.placediscovery.MapsActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment" />

    <!-- whenever you want to add new layout, use wrap_content, not fill_parent -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:gravity="top">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_travel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Travel"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_explore"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Explore"/>

        <Spinner
            android:id="@+id/spinnerCountry"
            android:layout_width="fill_parent"
            android:layout_marginTop="-8dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@color/monsoon"
            android:spinnerMode="dropdown"/>

    </LinearLayout>

    <com.placediscovery.HorizontalScrollView
        android:id="@+id/hs"
        android:scrollbars="none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/imageviews"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

        </LinearLayout>
    </com.placediscovery.HorizontalScrollView>
</LinearLayout>
