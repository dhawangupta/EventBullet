<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffde"
    android:orientation="vertical"
    tools:context=".ui.activity.MapsActivity"
    android:fitsSystemWindows="true" >

    <!--<fragment android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="1"-->
        <!--android:id="@+id/map"-->
        <!--tools:context=".maps.MapsActivity"-->
        <!--android:name="com.google.android.gms.maps.SupportMapFragment" />-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.mapbox.mapboxsdk.views.MapView
            android:id="@+id/mapview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            mapbox:access_token="pk.eyJ1IjoienViZXIiLCJhIjoiY2lpaGVjM3ptMDA3MXU2a25iYnB0dzluYyJ9.z0PcPwFB-Jv2EpJqbJ5Qdw" />

        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            android:src="@drawable/button_action_blue_selector" />
    </FrameLayout>

    <!-- whenever you want to add new layout, use wrap_content, not fill_parent -->

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hsfilters"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/filtertextviews"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/filter_all"
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:text="All"
                android:textColor="@color/White"
                android:textSize="15sp"
                android:background="@color/Teal"
                android:gravity="center"/>
            <TextView
                android:id="@+id/filter_attractions"
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:text="Attractions"
                android:textColor="@color/White"
                android:textSize="15sp"
                android:background="@color/OrangeRed"
                android:gravity="center"/>
            <TextView
                android:id="@+id/filter_food"
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:text="Food n Drinks"
                android:textColor="@color/White"
                android:textSize="15sp"
                android:background="@color/ForestGreen"
                android:gravity="center"/>
            <TextView
                android:id="@+id/filter_events"
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:text="Events"
                android:textColor="@color/White"
                android:textSize="15sp"
                android:background="@color/Brown"
                android:gravity="center"/>
        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hs"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/imageviews"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>
